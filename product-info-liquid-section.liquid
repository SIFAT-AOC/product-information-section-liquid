{% comment %}
  Product Details Section
  Displays comprehensive product information with responsive design
{% endcomment %}

<div class="product-details-section" data-section-id="{{ section.id }}">
  <div class="container">
    {%- assign selected_product = all_products[section.settings.product] -%}
    
    {%- if selected_product != blank -%}
      {%- assign product = selected_product -%}
      
      <div class="product-details-wrapper" data-product-id="{{ product.id }}">
        {%- comment -%} Product Images {%- endcomment -%}
        <div class="product-images">
          <div class="main-image">
            {%- if product.featured_image -%}
              <img 
                src="{{ product.featured_image | img_url: '800x' }}" 
                alt="{{ product.featured_image.alt | escape }}"
                loading="lazy"
                class="featured-img"
              >
            {%- else -%}
              <div class="no-image">No image available</div>
            {%- endif -%}
            
            {%- if product.images.size > 0 -%}
              <span class="badge-oferta">{{ section.settings.badge_text }}</span>
            {%- endif -%}
          </div>
          
          {%- if product.images.size > 1 -%}
            <div class="thumbnail-images">
              {%- for image in product.images limit: 6 -%}
                <div class="thumbnail {% if forloop.first %}active{% endif %}">
                  <img 
                    src="{{ image | img_url: '150x' }}" 
                    alt="{{ image.alt | escape }}"
                    data-image-id="{{ image.id }}"
                    loading="lazy"
                  >
                </div>
              {%- endfor -%}
            </div>
          {%- endif -%}
        </div>

        {%- comment -%} Product Information {%- endcomment -%}
        <div class="product-info">
          
          {%- comment -%} Product Title {%- endcomment -%}
          <h1 class="product-title">{{ product.title }}</h1>
          
          {%- comment -%} Product Vendor {%- endcomment -%}
          {%- if product.vendor != blank -%}
            <p class="product-vendor">{{ product.vendor }}</p>
          {%- endif -%}
          
          {%- comment -%} Price {%- endcomment -%}
          <div class="product-price">
            {%- if product.compare_at_price > product.price -%}
              <span class="price-compare">${{ product.compare_at_price | money_without_currency }} USD</span>
              <span class="price-sale">${{ product.price | money_without_currency }} USD</span>
              <span class="price-savings">
                Ahorra {{ product.compare_at_price | minus: product.price | times: 100 | divided_by: product.compare_at_price }}%
              </span>
            {%- else -%}
              <span class="price-regular">${{ product.price | money_without_currency }} USD</span>
            {%- endif -%}
          </div>

          {%- comment -%} Product Form {%- endcomment -%}
          {%- form 'product', product, id: 'product-form', class: 'product-form' -%}
            
            {%- comment -%} Variant Selector {%- endcomment -%}
            {%- unless product.has_only_default_variant -%}
              {%- for option in product.options_with_values -%}
                <div class="product-option">
                  <label for="Option-{{ option.position }}">
                    {{ option.name }}: <span class="selected-value">{{ option.selected_value }}</span>
                  </label>
                  <div class="option-values">
                    {%- for value in option.values -%}
                      <input 
                        type="radio" 
                        id="Option-{{ option.position }}-{{ forloop.index }}"
                        name="options[{{ option.name | escape }}]"
                        value="{{ value | escape }}"
                        {% if option.selected_value == value %}checked{% endif %}
                      >
                      <label for="Option-{{ option.position }}-{{ forloop.index }}" class="option-label">
                        {{ value }}
                      </label>
                    {%- endfor -%}
                  </div>
                </div>
              {%- endfor -%}
            {%- endunless -%}
            
            {%- comment -%} Personalization Field {%- endcomment -%}
            {%- if section.settings.enable_personalization -%}
              <div class="personalization-field">
                <label for="custom-text">
                  <strong>{{ section.settings.personalization_label }}</strong>
                </label>
                <input 
                  type="text" 
                  id="custom-text"
                  name="properties[{{ section.settings.personalization_label }}]"
                  placeholder="{{ section.settings.personalization_placeholder }}"
                  class="custom-input"
                >
                <small class="help-text">{{ section.settings.personalization_help_text }}</small>
              </div>
            {%- endif -%}

            {%- comment -%} Quantity Selector {%- endcomment -%}
            <div class="quantity-cart-wrapper">
              <div class="quantity-selector">
                <label for="Quantity">Cantidad:</label>
                <button type="button" class="qty-btn minus">−</button>
                <input 
                  type="number" 
                  id="Quantity" 
                  name="quantity" 
                  value="1" 
                  min="1"
                  class="qty-input"
                >
                <button type="button" class="qty-btn plus">+</button>
              </div>

              {%- comment -%} Add to Cart Button {%- endcomment -%}
              <button 
                type="submit" 
                name="add"
                class="btn-add-cart"
                {% unless product.available %}disabled{% endunless %}
              >
                {%- if product.available -%}
                  {{ section.settings.add_to_cart_text }}
                {%- else -%}
                  Agotado
                {%- endif -%}
              </button>
            </div>

            <select name="id" id="ProductSelect" class="hidden">
              {%- for variant in product.variants -%}
                <option 
                  value="{{ variant.id }}"
                  {% unless variant.available %}disabled{% endunless %}
                >
                  {{ variant.title }} - {{ variant.price | money }}
                </option>
              {%- endfor -%}
            </select>
          {%- endform -%}

          {%- comment -%} Product Description {%- endcomment -%}
          {%- if product.description != blank -%}
            <div class="product-description">
              <h3>Descripción</h3>
              <div class="description-content">
                {{ product.description }}
              </div>
            </div>
          {%- endif -%}

          {%- comment -%} Product Details {%- endcomment -%}
          <div class="product-details-info">
            <h3>Detalles del Producto</h3>
            <ul class="details-list">
              <li><strong>SKU:</strong> {{ product.selected_or_first_available_variant.sku | default: 'N/A' }}</li>
              <li><strong>Disponibilidad:</strong> 
                {%- if product.available -%}
                  <span class="in-stock">En Stock</span>
                {%- else -%}
                  <span class="out-of-stock">Agotado</span>
                {%- endif -%}
              </li>
              <li><strong>Tipo:</strong> {{ product.type | default: 'N/A' }}</li>
              {%- if product.tags.size > 0 -%}
                <li><strong>Tags:</strong> {{ product.tags | join: ', ' }}</li>
              {%- endif -%}
            </ul>
          </div>

        </div>
      </div>
    {%- else -%}
      <div class="no-product">
        <p>Por favor selecciona un producto en la configuración de la sección.</p>
      </div>
    {%- endif -%}
  </div>
</div>

<style>
  .product-details-section {
    padding: 40px 20px;
    background: #fff;
  }

  .container {
    max-width: 1200px;
    margin: 0 auto;
  }

  .product-details-wrapper {
    display: grid;
    grid-template-columns: 1fr 1fr;
    gap: 60px;
    align-items: start;
  }

  /* Product Images */
  .product-images {
    position: sticky;
    top: 20px;
  }

  .main-image {
    position: relative;
    border-radius: 8px;
    overflow: hidden;
    background: #f8f8f8;
    margin-bottom: 15px;
  }

  .featured-img {
    width: 100%;
    height: auto;
    display: block;
  }

  .badge-oferta {
    position: absolute;
    top: 15px;
    left: 15px;
    background: #ec0101;
    color: #fff;
    padding: 8px 16px;
    border-radius: 4px;
    font-weight: 600;
    font-size: 14px;
  }

  .thumbnail-images {
    display: grid;
    grid-template-columns: repeat(auto-fill, minmax(80px, 1fr));
    gap: 10px;
  }

  .thumbnail {
    border: 2px solid transparent;
    border-radius: 6px;
    overflow: hidden;
    cursor: pointer;
    transition: border-color 0.3s;
  }

  .thumbnail.active,
  .thumbnail:hover {
    border-color: #000;
  }

  .thumbnail img {
    width: 100%;
    height: auto;
    display: block;
  }

  /* Product Info */
  .product-info {
    display: flex;
    flex-direction: column;
    gap: 25px;
  }

  .product-title {
    font-size: 28px;
    font-weight: 600;
    line-height: 1.3;
    color: #222;
    margin: 0;
  }

  .product-vendor {
    font-size: 14px;
    color: #666;
    text-transform: uppercase;
    letter-spacing: 1px;
    margin: 0;
  }

  .product-price {
    display: flex;
    align-items: center;
    gap: 15px;
    flex-wrap: wrap;
  }

  .price-compare {
    font-size: 20px;
    color: #999;
    text-decoration: line-through;
  }

  .price-sale {
    font-size: 28px;
    color: #ec0101;
    font-weight: 700;
  }

  .price-regular {
    font-size: 28px;
    color: #222;
    font-weight: 700;
  }

  .price-savings {
    background: #ffd700;
    color: #000;
    padding: 4px 12px;
    border-radius: 4px;
    font-size: 14px;
    font-weight: 600;
  }

  /* Product Options */
  .product-option {
    display: flex;
    flex-direction: column;
    gap: 12px;
  }

  .product-option label {
    font-weight: 600;
    font-size: 16px;
    color: #222;
  }

  .selected-value {
    font-weight: 400;
    color: #666;
  }

  .option-values {
    display: flex;
    flex-wrap: wrap;
    gap: 10px;
  }

  .option-values input[type="radio"] {
    display: none;
  }

  .option-label,
  .player-btn {
    padding: 12px 20px;
    border: 2px solid #ddd;
    border-radius: 6px;
    cursor: pointer;
    transition: all 0.3s;
    background: #fff;
    font-size: 14px;
    font-weight: 500;
  }

  .option-values input[type="radio"]:checked + .option-label {
    border-color: #000;
    background: #000;
    color: #fff;
  }

  .option-label:hover {
    border-color: #000;
  }

  /* Personalization */
  .personalization-field {
    display: flex;
    flex-direction: column;
    gap: 8px;
  }

  .custom-input {
    width: 100%;
    padding: 12px;
    border: 2px solid #ddd;
    border-radius: 6px;
    font-size: 14px;
    transition: border-color 0.3s;
  }

  .custom-input:focus {
    outline: none;
    border-color: #000;
  }

  .help-text {
    color: #666;
    font-size: 13px;
  }

  /* Quantity and Cart */
  .quantity-cart-wrapper {
    display: flex;
    gap: 15px;
    align-items: center;
  }

  .quantity-selector {
    display: flex;
    align-items: center;
    gap: 10px;
    border: 2px solid #ddd;
    border-radius: 6px;
    padding: 5px;
  }

  .quantity-selector label {
    padding: 0 10px;
    font-weight: 600;
    font-size: 14px;
  }

  .qty-btn {
    width: 36px;
    height: 36px;
    border: none;
    background: #f0f0f0;
    border-radius: 4px;
    cursor: pointer;
    font-size: 18px;
    transition: background 0.3s;
  }

  .qty-btn:hover {
    background: #e0e0e0;
  }

  .qty-input {
    width: 60px;
    text-align: center;
    border: none;
    font-size: 16px;
    font-weight: 600;
  }

  .btn-add-cart {
    flex: 1;
    padding: 16px 32px;
    background: #000;
    color: #fff;
    border: none;
    border-radius: 6px;
    font-size: 16px;
    font-weight: 600;
    cursor: pointer;
    transition: all 0.3s;
  }

  .btn-add-cart:hover:not(:disabled) {
    background: #333;
  }

  .btn-add-cart:disabled {
    background: #ccc;
    cursor: not-allowed;
  }

  /* Product Description */
  .product-description,
  .product-details-info {
    padding-top: 20px;
    border-top: 1px solid #e0e0e0;
  }

  .product-description h3,
  .product-details-info h3 {
    font-size: 20px;
    margin-bottom: 15px;
    color: #222;
  }

  .description-content {
    color: #555;
    line-height: 1.7;
  }

  .details-list {
    list-style: none;
    padding: 0;
    margin: 0;
    display: flex;
    flex-direction: column;
    gap: 10px;
  }

  .details-list li {
    color: #555;
    font-size: 14px;
  }

  .in-stock {
    color: #28a745;
    font-weight: 600;
  }

  .out-of-stock {
    color: #dc3545;
    font-weight: 600;
  }

  .hidden {
    display: none;
  }

  .no-product {
    grid-column: 1 / -1;
    text-align: center;
    padding: 60px 20px;
    background: #f8f8f8;
    border-radius: 8px;
  }

  /* Responsive Design */
  @media (max-width: 768px) {
    .product-details-wrapper {
      grid-template-columns: 1fr;
      gap: 30px;
    }

    .product-images {
      position: static;
    }

    .product-title {
      font-size: 24px;
    }

    .quantity-cart-wrapper {
      flex-direction: column;
      width: 100%;
    }

    .quantity-selector {
      width: 100%;
      justify-content: space-between;
    }

    .btn-add-cart {
      width: 100%;
    }
  }

  @media (max-width: 480px) {
    .product-details-section {
      padding: 20px 15px;
    }

    .option-label,
    .player-btn {
      padding: 10px 16px;
      font-size: 13px;
    }

    .thumbnail-images {
      grid-template-columns: repeat(4, 1fr);
    }
  }
</style>

<script>
(function() {
  const sectionId = '{{ section.id }}';
  const section = document.querySelector(`[data-section-id="${sectionId}"]`);
  
  if (!section) return;

  // Quantity selector functionality - scoped to this section only
  const plusBtn = section.querySelector('.qty-btn.plus');
  const minusBtn = section.querySelector('.qty-btn.minus');
  const qtyInput = section.querySelector('.qty-input');

  if (plusBtn && qtyInput) {
    plusBtn.addEventListener('click', function(e) {
      e.preventDefault();
      qtyInput.value = parseInt(qtyInput.value) + 1;
    });
  }

  if (minusBtn && qtyInput) {
    minusBtn.addEventListener('click', function(e) {
      e.preventDefault();
      if (parseInt(qtyInput.value) > 1) {
        qtyInput.value = parseInt(qtyInput.value) - 1;
      }
    });
  }

  // Thumbnail image switching - scoped to this section
  section.querySelectorAll('.thumbnail').forEach(thumb => {
    thumb.addEventListener('click', function() {
      section.querySelectorAll('.thumbnail').forEach(t => t.classList.remove('active'));
      this.classList.add('active');
      
      const imgSrc = this.querySelector('img').src.replace('_150x', '_800x');
      const featuredImg = section.querySelector('.featured-img');
      if (featuredImg) {
        featuredImg.src = imgSrc;
      }
    });
  });

  // Player button selection - scoped to this section
  section.querySelectorAll('.player-btn').forEach(btn => {
    btn.addEventListener('click', function() {
      section.querySelectorAll('.player-btn').forEach(b => b.classList.remove('active'));
      this.classList.add('active');
      
      const selectedValue = this.closest('.product-option').querySelector('.selected-value');
      if (selectedValue) {
        selectedValue.textContent = this.dataset.player;
      }
    });
  });

  // Update selected option value display - scoped to this section
  section.querySelectorAll('.option-values input[type="radio"]').forEach(radio => {
    radio.addEventListener('change', function() {
      const selectedValue = this.closest('.product-option').querySelector('.selected-value');
      if (selectedValue) {
        selectedValue.textContent = this.value;
      }
    });
  });
})();
</script>

{% schema %}
{
  "name": "Product Details",
  "settings": [
    {
      "type": "product",
      "id": "product",
      "label": "Product"
    },
    {
      "type": "text",
      "id": "badge_text",
      "label": "Badge Text",
      "default": "Oferta"
    },
    {
      "type": "text",
      "id": "add_to_cart_text",
      "label": "Add to Cart Button Text",
      "default": "Agregar al carrito"
    },
    {
      "type": "checkbox",
      "id": "enable_personalization",
      "label": "Enable Personalization",
      "default": true
    },
    {
      "type": "text",
      "id": "personalization_label",
      "label": "Personalization Label",
      "default": "Custom Name and Number"
    },
    {
      "type": "text",
      "id": "personalization_placeholder",
      "label": "Personalization Placeholder",
      "default": "Enter Your Custom Name & Number Here"
    },
    {
      "type": "text",
      "id": "personalization_help_text",
      "label": "Personalization Help Text",
      "default": "Personalization Option: Add your Name and Number for a Personal Touch"
    }
  ],
  "presets": [
    {
      "name": "Product Details"
    }
  ]
}
{% endschema %}